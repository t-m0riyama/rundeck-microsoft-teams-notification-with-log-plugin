{
  "type": "message",
  "attachments": [
    {
      "contentType": "application/vnd.microsoft.card.adaptive",
      "content": {
        "type": "AdaptiveCard",
        "version": "1.3",
        "schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "msteams": {
          "width": "Full"
        },
        "body": [
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "text": "[Rundeck Job notification / ${job_status}] #${execution.id}",
                    "type": "TextBlock",
                    "size": "medium",
                    "weight": "bolder",
                    "wrap": true
                  }
                ]
              }
            ]
          },
          {
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "url": "data:image/png;base64,${icon_base64}",
                    "type": "Image",
                    "size": "small"
                  }
                ],
                "width": "auto"
              },
              {
                "type": "Column",
                "items": [
                  {
                    "text": "${execution.job.name}",
                    "type": "TextBlock",
                    "color": "accent",
                    "size": "small",
                    "wrap": true
                  },
                  {
                    "text": "Posted by  **Rundeck Scheduler**",
                    "type": "TextBlock",
                    "size": "small"
                  }
                ],
                "width": "stretch"
              }
            ]
          },
          {
            "separator": true,
            "type": "ColumnSet",
            "columns": [
              {
                "type": "Column",
                "items": [
                  {
                    "facts": [
                      {
                        "title": "Group:",
                        "value": "${execution.job.group}"
                      },
                      {
                        "title": "Started:",
                        "value": "${execution.dateStarted}"
                      },
                      {
                        "title": "Status:",
                        "value": "${execution.status}"
                      },
                      {
                        "title": "Rundeck execution URL:",
                        "value": "${execution.href}"
                      },
                      {
                        "title": "Log Snipped:",
                        "value": "${log_snipped}"
                      }
                    ],
                    "type": "FactSet"
                  },
                  {
                    "items": [
                      {
                        "id": "collapse",
                        "isVisible": true,
                        "text": "Detail DISPLAY    ðŸ”½",
                        "type": "TextBlock",
                        "weight": "bolder"
                      },
                      {
                        "id": "expand",
                        "isVisible": false,
                        "text": "Detail HIDE    ðŸ”¼",
                        "type": "TextBlock",
                        "weight": "bolder"
                      },
                      {
                        "id": "expand_items",
                        "isVisible": false,
                        "text": "\n${job_log_line_fix}\n",
                        "type": "TextBlock",
                        "size": "small"
                      }
                    ],
                    "type": "Container",
                    "selectAction": {
                      "title": "Expand/Collapse",
                      "targetElements": [
                        {
                          "elementId": "collapse"
                        },
                        {
                          "elementId": "expand"
                        },
                        {
                          "elementId": "expand_items"
                        }
                      ],
                      "type": "Action.ToggleVisibility"
                    }
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
